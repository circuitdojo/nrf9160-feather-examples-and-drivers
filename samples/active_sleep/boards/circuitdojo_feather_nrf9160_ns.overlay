/ {
    zephyr,user {
        latch-en-gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>;
    };

    leds {
        compatible = "gpio-leds";
        blue_led: led_0 {
            gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
            label = "Blue LED (D7)";
        };
    };
};

&gpio0 {
    sense-edge-mask = <0xffff>;
};

&i2c1 {
	lis2dh@18 {
		compatible = "st,lis2dh";
		reg = <0x18>;
		disconnect-sdo-sa0-pull-up;
	};
};